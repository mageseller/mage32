<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Mageseller\Customization\Block\Adminhtml\Category\Edit" name="devices_category_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Mageseller\Customization\Block\Adminhtml\Category\Edit\Tabs" name="devices_category_edit_tabs">
                <block class="Mageseller\Customization\Block\Adminhtml\Category\Edit\Tab\Category" name="devices_category_edit_tab_category"/>
                <block class="Mageseller\Customization\Block\Adminhtml\Category\Edit\Tab\Devices" name="devices_category_edit_tab_devices"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">category_section</argument>
                    <argument name="block" xsi:type="string">devices_category_edit_tab_category</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">devices_section</argument>
                    <argument name="block" xsi:type="string">devices_category_edit_tab_devices</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
